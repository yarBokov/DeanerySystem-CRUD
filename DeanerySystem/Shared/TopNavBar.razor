@inject NavigationManager NavigationManager
@inject DeaneryAuthenticationStateProvider AuthStateProvider

<div class="container">
    <header class="d-flex justify-content-center justify-content-md-between flex-wrap py-3 mb-4 border-white border-bottom border-5">
        <NavLink href="/" class="text-light text-decoration-none fs-4 fw-bold">Таблица успеваемости</NavLink>

        <ul class="nav">
            <li>
                <NavLink href="/" class="link-light nav-link">Домашняя страница</NavLink>
            </li> 
            <li>
                <NavLink href="/marks" class="link-light nav-link">Оценки</NavLink>
            </li>  
            <li>
                <NavLink href="/reports" class="link-light nav-link">Отчетность</NavLink>
            </li>
            <AuthorizeView>
                <Authorized>
                    <li>
                        <NavLink href="/admin/subjects" class="link-light nav-link">Предметы</NavLink>
                    </li>              
                    <li>
                        <NavLink href="/admin/groups" class="link-light nav-link">Группы</NavLink>
                    </li>
                    <li>
                        <NavLink href="/admin/students" class="link-light nav-link">Список студентов</NavLink>
                    </li> 
                    <li>
                        <NavLink href="/admin/teachers" class="link-light nav-link">Преподаватели</NavLink>
                    </li> 
                </Authorized>
            </AuthorizeView>
        </ul>

        <div class="text-end">
            <AuthorizeView>
                <Authorizing>Проверка ауентификации...</Authorizing>
                <Authorized>
                    <NavLink href="javascript:void()" class="btn btn-light disabled"></NavLink>                    
                    <button type="button" class="btn btn-primary" @onclick="LogoutAsync">Выйти</button>
                </Authorized>
                <NotAuthorized>
                    <NavLink href="/authentication/login" class="btn btn-primary">Войти как администратор</NavLink>
                    <NavLink href="/authentication/registration" class="btn btn-info">Зарегистрировать администратора</NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>

    </header>
</div>

@code {
    private async Task LogoutAsync()
    {
        await AuthStateProvider.LogoutAsync();
        NavigationManager.NavigateTo("/");
    }
}